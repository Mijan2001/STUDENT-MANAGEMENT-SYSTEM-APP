<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:background="#6040"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="CGPA CALCULATOR"
                android:textSize="40sp"
                android:textColor="#220A0A"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="900px"
                android:layout_marginTop="200px"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="#FFFFFF"
                android:layout_gravity="center"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/editText1"
                    android:textSize="20sp"
                    android:textColor="#320606"
                    android:hint="Subject Course Credit"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:id="@+id/editText2"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:hint="Your Couse Credit"
                    android:layout_marginVertical="20dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/button"
                    android:layout_gravity="center"
                    android:text="Add Course"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/button2"
                    android:textStyle="bold"
                    android:text="Display Your CGPA"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textView"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginVertical="40dp"
                    android:background="#E1CD20"
                    android:layout_gravity="center"
                    android:hint="YOUR CGPA : "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/button3"
                    android:text="CLEAR"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</LinearLayout>